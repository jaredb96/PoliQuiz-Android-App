<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ideology_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"/>


    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/strong_agree_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strong_agree_button"
            android:gravity="center"/>

        <Button
            android:id="@+id/agree_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agree_button"/>

        <Button
            android:id="@+id/neutral_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/neutral_button"/>

        <Button
            android:id="@+id/disagree_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disagree_button"/>

        <Button
            android:id="@+id/strong_disagree_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strong_disagree_button"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:padding="16dp"
            android:contentDescription="@string/back_button"/>

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:padding="16dp"
            android:contentDescription="@string/next_button"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_quiz_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_quiz_button"/>

    </LinearLayout>

</LinearLayout>
